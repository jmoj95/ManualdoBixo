<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MoradiaItemActivity">

    <ImageView
        android:id="@+id/img_oferta_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_dashboard_campus"
        android:padding="16dp"
        android:background="#0000ff"/>

    <TextView
        android:id="@+id/txt_oferta_item_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo da Oferta"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_oferta_picture"/>

    <TextView
        android:id="@+id/txt_oferta_item_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartamento"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_item_titulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_oferta_item_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cedro"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_item_tipo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_oferta_item_quartos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 quartos"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_item_endereco"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_oferta_item_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$600,00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_item_quartos" />

    <TextView
        android:id="@+id/txt_oferta_item_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_item_preco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Descricao"
        android:layout_marginTop="16dp"/>

</android.support.constraint.ConstraintLayout>