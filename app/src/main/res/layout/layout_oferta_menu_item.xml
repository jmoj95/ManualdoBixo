<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_oferta_menu_item">

    <ImageView
        android:id="@+id/img_oferta_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_dashboard_campus"
        android:background="#0000ff"/>

    <TextView
        android:id="@+id/txt_oferta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo da Oferta"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/img_oferta_picture"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_oferta_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartamento"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_titulo"
        app:layout_constraintLeft_toRightOf="@id/img_oferta_picture"/>

    <TextView
        android:id="@+id/txt_oferta_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cedro"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_tipo"
        app:layout_constraintLeft_toRightOf="@id/img_oferta_picture"/>

    <TextView
        android:id="@+id/txt_oferta_quartos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 quartos"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_endereco"
        app:layout_constraintLeft_toRightOf="@id/img_oferta_picture"/>

    <TextView
        android:id="@+id/txt_oferta_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$600,00"
        app:layout_constraintLeft_toRightOf="@id/img_oferta_picture"
        app:layout_constraintTop_toBottomOf="@id/txt_oferta_quartos" />

</android.support.constraint.ConstraintLayout>