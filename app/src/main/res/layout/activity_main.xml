<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgbtn_instituicao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000ff"
            android:minHeight="200dp"
            android:src="@drawable/ic_dashboard_institution"
            android:onClick="imgBtnInstituicaoClick" />

        <ImageButton
            android:id="@+id/imgbtn_campus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff0f"
            android:minHeight="200dp"
            android:src="@drawable/ic_dashboard_campus"
            android:onClick="imgBtnCampusClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgbtn_cursos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0fffff"
            android:minHeight="200dp"
            android:src="@drawable/ic_dashboard_cursos"
            android:onClick="imgBtnCursosClick" />

        <ImageButton
            android:id="@+id/imgbtn_moradia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0fff"
            android:minHeight="200dp"
            android:src="@drawable/ic_dashboard_moradia"
            android:onClick="imgBtnMoradiaClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgbtn_recomendacoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0fff00"
            android:minHeight="200dp"
            android:src="@drawable/ic_dashboard_recomendacoes"
            android:onClick="imgBtnRecomendacoesClick" />

    </LinearLayout>

</LinearLayout>