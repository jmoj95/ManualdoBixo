<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TopicosMenuActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique para Acessar Topicos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_diretoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diretoria"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:onClick="btnDiretoriaClick" />

    <Button
        android:id="@+id/btn_estrutura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estrutura"
        app:layout_constraintTop_toBottomOf="@id/btn_diretoria"
        android:onClick="btnEstruturaClick" />

</android.support.constraint.ConstraintLayout>